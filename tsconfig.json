{
    "compilerOptions": {
        "outDir": "./dist/",
        "experimentalDecorators": true,
        "noImplicitAny": false,
        "module": "ESNext",
        "allowSyntheticDefaultImports": true,
        "target": "es5",
        "declarationMap": true,
        "declaration": true,
        "allowJs": true,
        "moduleResolution": "node",
        "lib": ["ES5", "ES2015", "DOM", "ScriptHost"],
        "emitDeclarationOnly": false,
        "esModuleInterop": true,
        "skipLibCheck": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "janus-gateway"]
}
